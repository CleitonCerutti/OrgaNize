<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/primeiraTela"
    android:background="@color/material_dynamic_secondary90"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimeiraTelaActivity">

    <!-- Orga -->

    <!-- Balão de Saudação -->
    <ImageView
        android:id="@+id/orga_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/continuar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/orga" />

    <RelativeLayout
        android:id="@+id/orga_balloon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/orga_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible">


    </RelativeLayout>

    <Button
        android:id="@+id/continuar"
        android:layout_width="332dp"
        android:layout_height="48dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="@color/black"
        android:text="Avançar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/orga_balloon"
        android:layout_width="360dp"
        android:layout_height="69dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/balloon_background"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Olá! Eu sou o Orga e estou aqui para ajudar!"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145" />

</androidx.constraintlayout.widget.ConstraintLayout>
